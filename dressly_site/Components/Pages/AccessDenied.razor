@page "/access-denied"

@inject ClassLibrary1.Services.LoginSession LoginSession

<h3 style="text-align: center; direction: rtl;">שגיאה בהרשאות</h3>

<p style="text-align: center; direction: rtl;">
    שלום, @LoginSession.Username
</p>

<p style="text-align: center; direction: rtl;">
    @{
        // התאמת המסר על פי התפקיד
        string message = LoginSession.Role switch
        {
            "Guest" => "כאורח אין לך גישה לדף זה.",
            "User" => "כמשתמש אין לך גישה לדף זה.",
            "Admin" => "כמנהל אין לך גישה לדף זה.",
            _ => "אין לך גישה לדף זה."
        };
    }
    @message
</p>
