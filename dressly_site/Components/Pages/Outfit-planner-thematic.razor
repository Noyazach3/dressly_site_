                    <option value="1">חולצה ומכנס</option>
                    <option value="2">חצאית וגופייה</option>
                    <option value="3">שמלה</option>
                </InputSelect>
            </div>

            <!-- כפתור שליחה -->
            <button type="submit" class="btn pink-btn">המשך לתכנון</button>
        </EditForm>
    </div>
</div>

