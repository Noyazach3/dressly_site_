@page "/"

@using BootstrapBlazor.Components
@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>

<h1 style="text-align:center; font-size: 20em; font-weight: bold;">DRESSLY</h1>
<p style="text-align:center; font-size: 1.5em; font-weight: bold;">!ברוכים הבאים לארון הווירטואלי</p>

<div style="display: flex; justify-content: center; gap: 20px; margin-top: 20px;">
    <button class="btn btn-lg"
            style="background-color: #ff69b4; border: none; font-size: 1.25em; font-weight: bold; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2); transform: translateY(0); transition: transform 0.2s ease;"
            onmouseover="this.style.transform='translateY(-3px)';"
            onmouseout="this.style.transform='translateY(0px)';"
            @onclick="NavigateToLogin">
        Login
    </button>

    <button class="btn btn-lg"
            style="background-color: #ff69b4; border: none; font-size: 1.25em; font-weight: bold; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2); transform: translateY(0); transition: transform 0.2s ease;"
            onmouseover="this.style.transform='translateY(-3px)';"
            onmouseout="this.style.transform='translateY(0px)';"
            @onclick="NavigateToSignup">
        Sign Up
    </button>
</div>


@code {
    private void NavigateToLogin()
    {
        // ניווט לדף כניסה
        Navigation.NavigateTo("/login");
    }

    private void NavigateToSignup()
    {
        // ניווט לדף הרשמה
        Navigation.NavigateTo("/signup");
    }
}

