@page "/plan-outfits" // כתובת ה-URL של העמוד
@inject NavigationManager Navigation // שירות לניווט בין עמודים

<div class="center-content">
    <h1>תכנון אאוטפיט</h1>

    <!-- כפתורים לניווט לעמודים שונים -->
    <div class="button-container">
        <button class="btn pink-btn" @onclick="NavigateToNextPage">אאוטפיט לפי נושאים</button>
        <button class="btn pink-btn" @onclick="NavigateToAnotherPage">אאוטפיט כללי</button>
    </div>
</div>

<!-- עיצוב CSS פנימי -->
<style>
    .center-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh; 
        text-align: center;
    }

    .btn {
        font-size: 1.5rem; 
        padding: 15px 30px; 
        border: none;
        border-radius: 8px; 
        cursor: pointer;
        margin: 10px; 
    }

    .pink-btn {
        background-color: rosybrown;
        color: white;
    }

        .pink-btn:hover {
            background-color: pink;
        }

    .button-container {
        display: flex;
        gap: 15px; 
    }

    h1 {
        font-size: 3rem;
        margin-bottom: 20px;
    }
</style>

@code {
    // ניווט לעמוד תכנון אאוטפיט לפי נושא
    private void NavigateToNextPage()
    {
        Navigation.NavigateTo("/outfit-planner-thematic");
    }

    // ניווט לעמוד תכנון אאוטפיט כללי
    private void NavigateToAnotherPage()
    {
        Navigation.NavigateTo("/plan-outfits-general");
    }
}
